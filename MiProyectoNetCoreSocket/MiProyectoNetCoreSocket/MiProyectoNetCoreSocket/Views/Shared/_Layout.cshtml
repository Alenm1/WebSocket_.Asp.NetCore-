<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiProyectoNetCoreSocket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/menu.css"/>
    <link rel="stylesheet" href="~/MiProyectoNetCoreSocket.styles.css"/>
</head>
<body>
    <header class="header" id="header">
        <nav class="navbar container">
            <a href="#" class="brand">Sistema de GEstion de Cursos</a>
            <div class="search">
            </div>
            <div class="menu" id="menu">
                <ul class="menu-inner">
                    <li class="menu-item"><a href="/Producto/Index" class="menu-link">Producto</a></li>
                    <li class="menu-item"><a href="/Carrito/Index" class="menu-link">Cursos</a></li>
                    <li class="menu-item"><a href="/Chat/Index" class="menu-link">Chat</a></li>
                    <li class="menu-item"><a href="/Visor/Index" class="menu-link">Visor</a></li>
                    <li class="menu-item"><a href="/ArbolDirectorio/Index" class="menu-link">Arbol Directorio</a></li>

                </ul>
            </div>
            <div class="burger" id="burger">
                <span class="burger-line"></span>
                <span class="burger-line"></span>
                <span class="burger-line"></span>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        <main role="main" class="pt-4">
            @RenderBody()
        </main>
    </div>


    <input type="hidden" id="hdfOculto" value="@Url.Content("~")" />
    <input type="hidden" id="urlSocket" value="@ViewBag.urlSocket" />


    <div id="divLoading" style="display:none;background-image:url(../img/loading.gif);
           position:absolute;top:0;left:0;
            width:100%;height:100%;
             background-repeat:no-repeat;background-position:center;z-index:2000">
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sweetalert.js"></script>

    <script src="~/js/menu.js"></script>
    <script src="~/js/generic.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
